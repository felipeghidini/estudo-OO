package entities;

import java.util.ArrayList;
import java.util.List;
import java.util.Random;

public class Mago extends Personagem {
	private List<String> magia;
	
	public Mago(String nome) {
		super(nome, 100, 200, 0, 50, 20, 1);
		
		this.magia = new ArrayList<String>();
		this.magia.add("Cura");
		this.magia.add("Terremoto");
	}	
	
	public List<String> getMagia() {
		return magia;
	}


	public void setMagia(List<String> magia) {
		this.magia = magia;
	}


	public void lvlUp() {
		super.setVida(getVida()+20);
		super.setMana(getMana()+50);
		super.setXp(getXp()+100);
		super.setInteligencia(getInteligencia()+5);
		super.setForca(getForca()+2);
		super.setLevel(getLevel()+1);
		
		System.out.println("Level Up!");
	}

	public void attack() {
		Random numRandom = new Random();
		int fatorMultiplicacao = numRandom.nextInt(300);

		int attack = (super.getInteligencia() * super.getLevel()) + fatorMultiplicacao;
		System.out.println("Efetuou attack com " + attack + " de dano.");
	}
	
	public void aprenderMagia(String magia) {
		this.magia.add(magia);
	}


	@Override
	public String toString() {
		return "Mago [Magias=" + getMagia() + ", Nome=" + getNome() + ", Vida="
				+ getVida() + ", Mana=" + getMana() + ", Xp=" + getXp() + ", Inteligencia="
				+ getInteligencia() + ", Forca=" + getForca() + ", Level=" + getLevel() + "]";
	}
}
