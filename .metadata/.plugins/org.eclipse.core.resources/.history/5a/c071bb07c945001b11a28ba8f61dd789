package application;

import java.util.ArrayList;
import java.util.List;

import entities.Guerreiro;
import entities.Mago;
import entities.Personagem;

public class Program {

	public static void main(String[] args) {
		
		List<String> habilidade = new ArrayList<>();
		String habilidades = "Soco normal";
		habilidade.add(habilidades);
		
		Mago mago1 = new Mago("jose",  100, 100,10,10,1,25, habilidade);
		Mago mago2 = new Mago("Pedro",  50, 50,20,20,2,25, habilidade);
		Mago mago3 = new Mago("Lucas", 200, 200,100,30,2,25, habilidade);
		
		Guerreiro guerreiro1 = new Guerreiro("Ana",  200, 100,20,15,1,25, habilidade);
		Guerreiro guerreiro2 = new Guerreiro("Joao",  300, 50,25,30,1,25, habilidade);
		Guerreiro guerreiro3 = new Guerreiro("Lia",  500, 30,15,20,1,25, habilidade);
		
		
		List<Mago> magos = new ArrayList<>();
		{
			magos.add(mago1);
			magos.add(mago2);
			magos.add(mago3);
		}
		List<Guerreiro> guerreiros = new ArrayList<>();
		{
			guerreiros.add(guerreiro1);
			guerreiros.add(guerreiro2);
			guerreiros.add(guerreiro3);
		}
		mago1.aprendeMagia("Bola de Fogo");
		mago2.aprendeMagia("Poder irrestrito");
		mago2.aprendeMagia("Incendiar");
		mago3.aprendeMagia("Alucinação");
		
		guerreiro1.aprenderHabilidade("Chute fraco");
		guerreiro1.aprenderHabilidade("Soco forte");
		guerreiro2.aprenderHabilidade("Corte vertical");
		guerreiro3.aprenderHabilidade("Chute alto");
		
		System.out.println(Personagem.getContadorPerso());
		mago1.getlvlUp();
		System.out.println("---------------------------------------------------------------------------");
		for(int i = 0; i < magos.size(); i++){
			System.out.println("Mago: " + magos.get(i).getNome() + ", Level: " +magos.get(i).getLevel()
				+ ", Inteligência " +magos.get(i).getInteligencia() + " Magia: " + magos.get(i).getHabilidade());
			System.out.println("");
		}
		
		System.out.println("---------------------------------------------------------------------------");
		guerreiro1.getlvlUp();
		guerreiro2.getlvlUp();
		guerreiro3.getlvlUp();
		
		for(int i = 0; i < guerreiros.size(); i++){
			System.out.println("Guerreiro: " + guerreiros.get(i).getNome() + ", Level: " +guerreiros.get(i).getLevel()
				+ ", Inteligência " +guerreiros.get(i).getInteligencia() + " Habilidade: " + guerreiros.get(i).getHabilidade());
			System.out.println("");
		}
		for(int i = 0; i < magos.size(); i++){
			System.out.println("Mago(a) " + magos.get(i).getNome() + " ataca: " + magos.get(i).attack());
			//Utilizei o mesmo for porque nesse caso mago e guerreiro tem a mesma quantidade de elementos
			System.out.println("Guerreiro(a) " + guerreiros.get(i).getNome() + " ataca: " + guerreiros.get(i).attack());
		}
	}
}

		Mago mago1 = new Mago("Zelda");
		Mago mago2 = new Mago("Bjorn");		
		
		Guerreiro guerreiro1 = new Guerreiro("Ragnar");
				
		System.out.println(mago1.toString());
		mago1.attack();
		mago1.lvlUp();
		mago1.aprenderMagia("Raio");
		System.out.println(mago1.toString());		
		
				
		System.out.println("\n"+guerreiro1.toString());
		guerreiro1.attack();
		guerreiro1.lvlUp();
		guerreiro1.aprenderHabilidade("Ataque Rápido");
		System.out.println(guerreiro1.toString());
		
		System.out.println("Foram criados " + Personagem.getTotalPerson() + " personagens.");
	}
}
