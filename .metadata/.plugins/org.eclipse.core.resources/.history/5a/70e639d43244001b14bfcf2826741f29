package test;

import static org.junit.Assert.*;

import org.junit.Before;
import org.junit.Test;

import entities.Veiculo;

public class VeiculoTest {
	
	private Veiculo veiculo;
	
	@Before
	public void setup() {
		veiculo = new Veiculo();
	}
	
	@Test
	public void testAcelerarVeiculoQuandoEstiverLigado() throws Exception {
		veiculo.ligar();
		veiculo.acelerar();
		assertEquals(20, veiculo.getVelocidade());
	}

	@Test
	public void testNaoAcelerarVeiculoSeEstiverDesligado() throws Exception {
		veiculo.acelerar();
		assertEquals(false, veiculo.isLigado());
	}
	
	@Test
	public void testAbastecerVeiculoSeTanqueEstiverVazio() throws Exception {
		veiculo.abastecer(60);
		assertEquals(60, 60);
	}
	
	@Test
	public void testAbastecerAlemDaCapacidadeDoTanque() throws Exception {
		veiculo.abastecer(60);
		veiculo.setLitrosCombustivel(60);
		assertEquals(60, 60.0, 0.0);
	}
	
	@Test
	public void testRetornarAQuantidadeDeCombustivel() throws Exception {
		veiculo.getLitrosCombustivel();
		assertEquals(60.0, 60.0, 0.0);
	}
	
	@Test
	public void testLigarVeiculoSeEstiverDesligado() throws Exception {
		veiculo.ligar();
		assertEquals(true, veiculo.isLigado());
	}
	
	@Test
	public void testVeiculoLigadoNaoLigarNovamente() throws Exception {
		veiculo.ligar();
		veiculo.ligar();
		assertEquals(true, veiculo.isLigado());
	}
	
	
	@Test
	public void testDesligarVeiculoQuandoEstiverLigado() throws Exception {
		veiculo.ligar();
		veiculo.desligar();
		assertEquals(false, veiculo.isLigado());
	}

}
